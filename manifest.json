{
    "manifest_version": 3,
   
    "name": "V-Klass ++",
    "version": "1.0.0",
    "description": "Makes V-Klass prittier and adds color themes",
   
    "background": {
        "service_worker": "script.js"
        
        // "persistent": false
    },

    "permissions": [
        "tabs",
        "storage",
        "scripting"
    ],

    "host_permissions": [
        "https://www.vklass.se/"
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon": { 
            "16": "icons/default_icon_16.png",
            "48": "icons/default_icon_48.png",
           "128": "icons/default_icon_128.png" 
        }
    },

    "web_accessible_resources": [
        {
            "resources": ["images/*.*"],
            "matches": ["https://www.vklass.se/*"]
        }
    ],

    "icons": { 
        "16": "icons/default_icon_16.png",
        "48": "icons/default_icon_48.png",
       "128": "icons/default_icon_128.png" 
    }

    // "content_scripts": [{
    // //   "css": ["css/main.css"],
    //   "js": ["script.js"],
    //   "matches": ["https://www.vklass.se/*"]
    // }]
   
  }